generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id                    Int       @id @default(autoincrement())
  name                  String?    
  email                 String?   @unique
  password              String
  number                String    @unique
  balances              Balance[]
  onRampTransactions    OnRampTransaction[]
}

model Merchant {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  name      String
  auth_type AuthType
}

enum AuthType {
  Google
  Github
}

model Balance {
  id        Int     @id @default(autoincrement())
  userId    Int     @unique
  amount    Int
  locked    Int
  users     User    @relation(references: [id], fields: [userId])
}

model OnRampTransaction {
  id        Int     @id @default(autoincrement())
  userId    Int
  status    OnRampStatus
  token     String  @unique
  provider  String
  amount    Int
  startTime DateTime
  users     User    @relation(references: [id], fields: [userId])
}

enum OnRampStatus {
  success
  Failed
  Processing
}